{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        "group:all"
    ],
    "customManagers": [
        {
            "customType": "regex",
            "managerFilePatterns": [
                "/defaults/main.yml$/",
                "README.md$"
            ],
            "matchStrings": [
                "komodo_version: [\"']?(?<currentValue>.+?)[\"']?\\s+",
                "(?m)^\\s*\\|\\s*\\*\\*komodo(?:\\\\)?_version\\*\\*\\s*\\|\\s*[^|\\r\\n]*?(?<currentValue>v?\\d+(?:\\.\\d+){1,3})"
            ],
            "datasourceTemplate": "github-releases",
            "depNameTemplate": "moghtech/komodo"
        }
    ]
}
