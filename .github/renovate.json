{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        "group:all"
    ],
    "customManagers": [
        {
            "customType": "regex",
            "managerFilePatterns": [
                "/defaults/main.yml$/",
                "README\\.md$"
            ],
            "matchStrings": [
                "komodo_version: [\"']?(?<currentValue>.+?)[\"']?\\s+",
                "(?m)^\\|\\s*\\*\\*komodo\\\\?_version\\*\\*\\s*\\|\\s*`(?<currentValue>v?[0-9.]+)`"
            ],
            "datasourceTemplate": "github-releases",
            "depNameTemplate": "moghtech/komodo"
        }
    ]
}
